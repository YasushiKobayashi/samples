{
  "rules": {
    "preset-ja-spacing": {
      "ja-space-between-half-and-full-width": {
            "space": "always"
        }
    },
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 200
      },
      "ja-no-mixed-period": {
        "severity": "warning"
      },
      "no-mix-dearu-desumasu": {
        "severity": "warning"
      },
      "ja-no-weak-phrase": {
        "severity": "warning"
      },
      "ja-no-redundant-expression": {
        "severity": "warning"
      },
      "no-dropping-the-ra": {
        "severity": "warning"
      },
      "max-ten": {
        "max": 5,
        "severity": "warning"
      },
      "no-doubled-joshi": {
        "severity": "warning"
      }
    },
    "spellcheck-tech-word": true,
    "no-doubled-joshi": {
      "severity": "warning"
    },
    "ja-no-redundant-expression": {
      "severity": "warning"
    },
    "ja-no-successive-word": true,
    "ja-unnatural-alphabet": true,
    "max-ten": {
      "max": 4
    },
    "max-kanji-continuous-len": {
      "max": 6
    },
    "terminology": true,
    "no-todo": true,
    "no-empty-section": true,
    "abbr-within-parentheses": true,
    "common-misspellings": true,
    "no-dead-link": {
      "checkRelative": false,
      "ignore": ["http://localhost*"],
      "severity": "warning"
    }
  }
}
