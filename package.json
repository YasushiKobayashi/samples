{
  "name": "root",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "start": "zenn preview",
    "build": "lerna run --stream --parallel build",
    "vitest": "lerna run --stream --parallel vitest",
    "vitest-ci": "lerna run --stream --parallel vitest -- --reporter=default --reporter=junit --outputFile=test-report.junit.xml",
    "vitest-watch": "lerna run --parallel --stream vitest-watch",
    "type-check": "lerna run --stream --parallel type-check",
    "type-check-watch": "lerna run --parallel --stream type-check-watch",
    "lint-ts": "eslint .",
    "lint-sass": "stylelint --config .stylelintrc.yml 'src/**/*.tsx' 'packages/**/*.scss'",
    "lint-md": "textlint articles/*",
    "fix": "bun run fix-ts & bun run fix-sass & bun run fix-md",
    "fix-ts": "prettier --parser typescript --write 'src/**/*.ts{,x}'",
    "fix-sass": "stylelint --config .stylelintrc.yml 'src/**/*.scss' --fix",
    "fix-md": "bun run lint-md --fix && prettier --write --parser markdown 'articles/*' '**/*.md' '**/*.mdx'",
    "cp-artifacts": "lerna run --stream --parallel cp-artifacts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "eslint --fix"
    ],
    "*.{md,mdx}": [
      "prettier --write --parser markdown",
      "textlint --fix"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.4.5",
    "@chromatic-com/storybook": "^4.1.2",
    "@codecov/vite-plugin": "^1.9.0",
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.27.1",
    "@storybook/addon-a11y": "^10.0.2",
    "@storybook/addon-docs": "^10.0.2",
    "@storybook/addon-links": "^10.0.2",
    "@storybook/nextjs": "^10.0.2",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.9.2",
    "@types/react": "18.3.26",
    "@types/react-dom": "19.2.2",
    "@typescript-eslint/eslint-plugin": "8.44.0",
    "@typescript-eslint/parser": "8.44.0",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-istanbul": "^3.0.8",
    "@vitest/ui": "^3.0.8",
    "chromatic": "^13.0.0",
    "eslint": "^9.35.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-import-access": "^3.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^10.0.2",
    "eslint-plugin-testing-library": "^7.13.3",
    "happy-dom": "^20.0.10",
    "husky": "^9.0.0",
    "hygen": "^6.2.11",
    "lerna": "^8.2.1",
    "lint-staged": "^16.0.0",
    "npm-run-all2": "^8.0.0",
    "path": "^0.12.7",
    "playwright": "^1.27.1",
    "prettier": "^3.0.0",
    "storybook": "^10.0.2",
    "textlint": "^14.8.4",
    "textlint-rule-abbr-within-parentheses": "^1.0.2",
    "textlint-rule-common-misspellings": "^1.0.1",
    "textlint-rule-ja-no-mixed-period": "^3.0.2",
    "textlint-rule-ja-no-redundant-expression": "^4.0.1",
    "textlint-rule-ja-no-successive-word": "^2.0.1",
    "textlint-rule-ja-unnatural-alphabet": "^2.0.1",
    "textlint-rule-max-kanji-continuous-len": "^1.1.1",
    "textlint-rule-max-ten": "^5.0.0",
    "textlint-rule-no-dead-link": "^6.0.1",
    "textlint-rule-no-doubled-joshi": "^5.1.1",
    "textlint-rule-no-empty-section": "^1.1.0",
    "textlint-rule-no-mix-dearu-desumasu": "^6.0.4",
    "textlint-rule-no-todo": "^2.0.1",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-prh": "^6.1.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "textlint-rule-terminology": "^5.2.15",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.43.0",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8",
    "vitest-axe": "1.0.0-pre.5",
    "vitest-canvas-mock": "^0.3.3",
    "zenn-cli": "^0.2.9"
  },
  "dependencies": {
    "next": "^15.0.0",
    "pathpida": "^0.25.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swr": "^2.0.0",
    "unstated-next": "^1.1.0"
  }
}
