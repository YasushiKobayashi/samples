{
  "name": "root",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "start": "zenn preview",
    "build": "lerna run --stream --parallel build",
    "vitest": "lerna run --stream --parallel vitest",
    "vitest-ci": "lerna run --stream --parallel vitest -- --reporter=junit --outputFile=test-report.junit.xml",
    "vitest-watch": "lerna run --parallel --stream vitest-watch",
    "type-check": "lerna run --stream --parallel type-check",
    "type-check-watch": "lerna run --parallel --stream type-check-watch",
    "lint-ts": "eslint --ext js --ext jsx --ext ts --ext tsx ./ --ignore-path .gitignore",
    "lint-sass": "stylelint --config .stylelintrc.yml 'src/**/*.tsx' 'packages/**/*.scss'",
    "lint-md": "textlint articles/*",
    "fix": "bun run fix-ts & bun run fix-sass & bun run fix-md",
    "fix-ts": "prettier --parser typescript --write 'src/**/*.ts{,x}'",
    "fix-sass": "stylelint --config .stylelintrc.yml 'src/**/*.scss' --fix",
    "fix-md": "bun run lint-md --fix",
    "cp-artifacts": "lerna run --stream --parallel cp-artifacts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "textlint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.4.5",
    "@chromatic-com/storybook": "^3",
    "@codecov/vite-plugin": "^1.9.0",
    "@playwright/test": "^1.27.1",
    "@storybook/addon-a11y": "^8.6.4",
    "@storybook/addon-essentials": "^8.6.4",
    "@storybook/addon-interactions": "^8.6.4",
    "@storybook/addon-links": "^8.6.4",
    "@storybook/nextjs": "^8.6.4",
    "@storybook/react": "^8.6.4",
    "@storybook/test": "^8.6.4",
    "@testing-library/react": "^16.0.0",
    "@types/react": "18.3.18",
    "@types/react-dom": "19.1.2",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-istanbul": "^3.0.8",
    "@vitest/ui": "^3.0.8",
    "chromatic": "^11.0.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-access": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "happy-dom": "^17.4.2",
    "husky": "^9.0.0",
    "hygen": "^6.2.11",
    "lerna": "^8.2.1",
    "lint-staged": "^15.0.0",
    "npm-run-all2": "^7.0.0",
    "path": "^0.12.7",
    "playwright": "^1.27.1",
    "prettier": "^3.0.0",
    "textlint": "^14.0.0",
    "textlint-rule-ja-no-mixed-period": "^3.0.1",
    "textlint-rule-max-ten": "^5.0.0",
    "textlint-rule-no-mix-dearu-desumasu": "^6.0.0",
    "textlint-rule-preset-ja-spacing": "^2.3.0",
    "textlint-rule-preset-ja-technical-writing": "^12.0.0",
    "textlint-rule-prh": "^6.0.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "tsconfig-paths-webpack-plugin": "^4.0.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.8",
    "vitest-axe": "1.0.0-pre.5",
    "vitest-canvas-mock": "^0.3.3",
    "zenn-cli": "^0.1.131"
  },
  "dependencies": {
    "next": "^15.0.0",
    "pathpida": "^0.25.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swr": "^2.0.0",
    "unstated-next": "^1.1.0"
  }
}
