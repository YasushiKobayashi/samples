{
  "name": "root",
  "private": true,
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "start": "zenn preview",
    "build": "lerna run --stream --parallel build",
    "build:modules": "lerna run --stream --parallel build:modules",
    "test": "lerna run --stream --parallel test",
    "test:watch": "lerna run --parallel --stream test:watch",
    "type-check": "lerna run --stream --parallel type-check",
    "type-check:watch": "lerna run --parallel --stream type-check:watch",
    "lint:ts": "eslint --ext js --ext jsx --ext ts --ext tsx ./ --ignore-path .gitignore",
    "lint:sass": "stylelint --config .stylelintrc.yml 'src/**/*.tsx' 'packages/**/*.scss'",
    "lint:md": "textlint articles/*",
    "fix": "yarn fix:ts & yarn fix:sass yarn fix:md",
    "fix:ts": "prettier --parser typescript --write 'src/**/*.ts{,x}'",
    "fix:sass": "stylelint --config .stylelintrc.yml 'src/**/*.scss' --fix",
    "fix:md": "yarn lint:md --fix",
    "cp-artifacts": "lerna run --stream cp-artifacts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --parser typescript --write",
      "eslint --fix",
      "git add"
    ],
    "*.md": [
      "textlint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@sls-next/aws-cloudfront": "^3.7.0",
    "@sls-next/aws-lambda": "^3.7.0",
    "@sls-next/aws-sqs": "^3.7.0",
    "@sls-next/serverless-component": "^3.7.0",
    "@testing-library/react": "^12.1.5",
    "@types/jest": "27.5.2",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "^5.19.0",
    "eslint": "8.25.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-access": "^1.0.1",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.31.8",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jest-html-reporter": "3.7.0",
    "jest-ts-auto-mock": "^2.1.0",
    "lerna": "5.5.4",
    "lint-staged": "13.0.3",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "prettier": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.32.0",
    "serverless": "^2.72.3",
    "textlint": "^12.1.1",
    "textlint-rule-ja-no-mixed-period": "^2.1.1",
    "textlint-rule-max-ten": "^4.0.3",
    "textlint-rule-no-mix-dearu-desumasu": "^5.0.0",
    "textlint-rule-preset-ja-spacing": "^2.2.0",
    "textlint-rule-preset-ja-technical-writing": "^7.0.0",
    "textlint-rule-prh": "^5.3.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "ts-auto-mock": "^3.5.0",
    "ts-jest": "27.1.5",
    "ts-loader": "^9.2.8",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.3",
    "zenn-cli": "0.1.131"
  },
  "dependencies": {
    "@prismicio/client": "^6.4.2",
    "@prismicio/richtext": "2.1.1",
    "@prismicio/types": "^0.1.27",
    "next": "^12.1.5",
    "pathpida": "^0.18.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "swr": "^1.3.0",
    "unstated-next": "^1.1.0"
  }
}
