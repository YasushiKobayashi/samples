{
  "name": "unit-test-refactor",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "vitest": "NODE_ENV=test jest --coverage",
    "vitest-ci": "NODE_ENV=test bun vitest --ci --reporters=default --reporters=jest-junit",
    "vitest-watch": "NODE_ENV=test bun vitest --watch",
    "type-check": "tsc --noEmit",
    "type-check-watch": "npm run type-check -- --watch",
    "lint-ts": "eslint --ext js --ext jsx --ext ts --ext tsx src",
    "fix": "npm run fix-ts",
    "fix-ts": "prettier --parser typescript --write 'src/**/*.ts{,x}'"
  },
  "author": "YasushiKobayashi <ptpadan@gmail.com> (https://github.com/YasushiKobayashi)",
  "license": "ISC"
}
